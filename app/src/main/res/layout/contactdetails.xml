<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/cshape"
        android:id="@+id/detailsImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:hint="AW"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iSecondInsideCircleText"
        android:layout_above="@+id/iSecondContactName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <TextView
        android:hint="03002472521"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iSecondContactNumber"
        android:layout_below="@+id/iSecondContactName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:hint="Abdul Wahab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="12dp"
        android:id="@+id/iSecondContactName"
        android:layout_below="@+id/detailsImageView"
        android:layout_alignRight="@+id/iSecondContactNumber"
        android:layout_alignEnd="@+id/iSecondContactNumber" />
</RelativeLayout>